<div class="col">
  <div class="card flex-md-row mb-4 box-shadow h-md-250">
    <div class="card-body d-flex flex-column align-items-start">
      <strong class="d-inline-block mb-2 text-primary"><%= article.category.name %></strong>
      <h3 class="mb-0">
        <%= article.title %>
      </h3>
      <div class="mb-1 text-muted"><%= article.created_at.strftime("%B %d of %Y") %></div>
      <p class="card-text mb-auto">
      <%= article.body[0,180]...%> 
      <%= link_to "Continue reading", article %>
      </p>
    </div>
    <img class="card-img-right flex-auto d-none d-md-block" alt="Thumbnail" style="width: 200px; height: 250px;" src=<%= article.image_url %> data-holder-rendered="true">
  </div>
</div>

