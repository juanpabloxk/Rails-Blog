<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield :articles_css %>
  </head>
  <body>
    <div class="container">
      <header class="blog-header py-3">
        <div class="nav-scroller py-1 mb-2">
          <nav class="nav d-flex justify-content-between">
            <a class="btn" href="<%= articles_path %>">All articles</a>
            <a class="btn" href="<%= categories_path %>">All categories</a>
            <% Category.all[0,8].each do |category| %>
              <%= link_to category.name, category, class: "btn text-muted" %>
            <% end %>
            <div class="dropdown">
              <button class="btn btn-outline-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= current_user.username.capitalize %>
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <%= link_to 'Profile', current_user, class: "dropdown-item" %>
                <%= link_to 'All users', users_path, class: "dropdown-item" %>
                <%= link_to 'Logout', logout_url, method: "delete", class: "dropdown-item" %>
              </div>
            </div>
          </nav>
        </div>
      </header>
      <%= yield %>
    </div>
  </body>
</html>

