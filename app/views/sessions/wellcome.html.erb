<div class="text-center">
    <h1>Welcome</h1>
    <% if logged_in? %>
    <h1>You are Logged In, <%= current_user.username %></h1>
    <% else%>
        <%= button_to "Login", '/login', method: :get, class: "btn"%>
        <%= button_to "Sign Up", '/users/new', method: :get, class: "btn"%>
    <%end%>
</div>